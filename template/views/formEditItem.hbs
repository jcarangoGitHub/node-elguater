{{>header}}
<div class="container">
  <!--Error message -->
  {{#if errorMsg}}
    {{>messageError}}
  {{/if}}
  <!--Success message -->
  {{#if successMsg}}
    {{>messageSuccess}}
  {{/if}}

  <div class="card-header bg-secondary h">
    <!--ROW 1-->
    <div class="form-row">
      <div class="col">
        <h class="card-title">{{item.name}}</h>
      </div>
    </div>
  </div>

  <form action="/item?isEdit=true" method="post" enctype="multipart/form-data">
    <input type="hidden" name="_itemId" id="_itemId" value="{{item._id}}">
    <div class="card-header bg-secondary h">
      <!--ROW 1-->
      <div class="form-row">
        <div class="col">
          <a class="btn btn-link" style="font-size: 25px"
            href="/partner?cell={{cellPhoneNumber}}"
            role="button">Volver
          </a>
        </div>
        <div class="col">
          <button class="btn btn-success my-3 my-sm-0 updatePartner" type="submit" style="font-size: 25px">
          <span class="input-group-addon"><i class="fa fa-check" aria-hidden="true"></i></span>
          Actualizar
          </button>
        </div>
      </div><!--ROW 1-->
    </div> <!--card-header-->

    <div class="card-body bg-dark">
      {{>itemFields}}
    </div><!--card-body-->
</form>

</div>
