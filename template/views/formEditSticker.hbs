{{>header}}
<div class="container">
  <!--Error message -->
  {{#if errorMsg}}
    {{>messageError}}
  {{/if}}
  <!--Success message -->
  {{#if successMsg}}
    {{>messageSuccess}}
  {{/if}}

  <div class="card-header bg-secondary h">
    <!--ROW 1-->
    <div class="form-row">
      <div class="col">
        <h class="card-title">{{sticker.header}}</h>
      </div>
    </div>
  </div>

  <form action="/sticker" method="post">
    <input type="hidden" name="stickerId" id="stickerId" value="{{sticker._id}}">
    <input type="hidden" name="servicePlace_Id" id="servicePlace_Id" value="{{sticker._servicePlaceId}}">    
    <div class="card-header bg-secondary h">
      <!--ROW 1-->
      <div class="form-row">
        <div class="col">
          <a class="btn btn-link" style="font-size: 25px"
            href="/partner?cell={{cellPhoneNumber}}"
            role="button">Volver
          </a>
        </div>
      </div><!--ROW 1-->
    </div> <!--card-header-->

    <div class="card text-center text-white bg-dark mb-3">
      <div class="card-body bg-dark">
        {{>stickerFields}}
      </div><!--card-body-->

      <button class="btn btn-success btn-lg btn-block" type="submit">
      Actualizar
      </button>
    </div>
</form>

</div>
