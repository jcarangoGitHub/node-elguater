{{>header}}
<div class="container">
  <form action="/postItem" method="post" enctype="multipart/form-data">
    <input type="hidden" name="isUpdate" value="{{isUpdate}}">
    <div class="form-group">
      <h5 class="card-title">Registrar artículo</h5>
      <br>
      <div class="container">
        <!--ROW 0-->
        <div class="form-row">
          <div class="col">
            {{#if item}}
              <img src="data:img/png;jpeg;jpg;base64, {{{getImageFromItem item}}}" class="card-img-top" alt="...">
            {{else}}
              Sin imagen
            {{/if}}
          </div>
          <div class="col-md-2">
            <label for="labelDocumentId">Código</label>
            <input type="text" class="form-control" name="code"
                   aria-describedby="Código" required
                   {{#if isUpdate}} value="{{item.code}}" {{/if}}>
          </div>

          <div class="col">
            <label for="labelLastName">Nombre</label>
            <input type="text" class="form-control" name="name"
                   aria-describedby="Nombre" required
                   {{#if isUpdate}} value="{{item.name}}" {{/if}}>
          </div>
        </div>
        <!--ROW 1-->
        <div class="form-row">


          <div class="col">
            <label for="labelFirstName">Precio venta</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">$</span>
              </div>
              <input type="text" class="form-control" name="salePrice"
                     aria-describedby="Prcio venta" required
                     onkeyup="formatMilesSeparetor(this);" onchange="formatMilesSeparetor(this);"
                     {{#if isUpdate}} value="{{item.salePrice}}" {{/if}}>
           </div>
          </div>

          <div class="col">
            <label for="labelPurchasePrice">Precio compra</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">$</span>
              </div>
              <input type="text" class="form-control" name="purchasePrice"
                     aria-describedby="Precio compra" required
                     onkeyup="formatMilesSeparetor(this);" onchange="formatMilesSeparetor(this);"
                     {{#if isUpdate}} value="{{item.purchasePrice}}" {{/if}}>
           </div>
          </div>

          <div class="col-md-2">
            <label for="labelQuantity">Cantidad</label>
            <input type="text" class="form-control" name="quantity">
          </div>

        </div>
        <!--ROW 2-->
        <div class="form-row">
          <div class="col">
            <label for="labelFirstName">Descripción</label>
            <textarea class="form-control" name="description" rows="3"></textarea>
          </div>
          <div class="col">
            <label for="labelFirstName">Comentario</label>
            <textarea class="form-control" name="comment" rows="3"></textarea>
          </div>
        </div>
        <!--ROW 3-->
        <div class="form row">
          <div class="col">
            <label for="labelFile">Imagen</label>
            <input type="file" class="form-control" name="image" accept="image/">
          </div>
        </div>
        <!--ROW 4-->
        <div class="form-row">
          <div class="col">
            &nbsp
          </div>
        </div>
        <!--ROW 5-->
        <div class="form-row">
          <div class="col">
            <button class="btn btn-primary my-2 my-sm-0">Crear</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
{{>footer}}
