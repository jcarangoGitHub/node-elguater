{{>header}}
<div class="container">
  <!--Error message -->
  {{#if errorMsg}}
    {{>messageError}}
  {{/if}}
  <!--Success message -->
  {{#if successMsg}}
    {{>messageSuccess}}
  {{/if}}
  <form action="/contact" method="post">
    <div class="card">
      <div class="card-header bg-secondary h">
        <!--ROW 1-->
        <div class="form-row">
          <div class="col">
            <span class="input-group-addon"><i class="fa fa-user-plus fa-1x fa-fw" style="color:white"></i></span>
            <h class="card-title">Nuevo contacto</h>
          </div>
          <div class="col">
            {{#if contact}}
            <div class="input-group mb-3">
              <a class="btn btn-success btn-lg" href="javascript:enableFields(event);" role="button">Editar</a>
            </div>
            {{/if}}
            <div class="input-group mb-3">
              <button class="btn btn-success btn-lg" style="font-size: 25px" type="submit">
                <span class="input-group-addon"><i class="fa fa-plus fa-1x fa-fw" aria-hidden="true"></i></span>
                Crear
              </button>
            </div>
          </div>
        </div><!--ROW 1-->
      </div>
    </div>
    <div class="card-body bg-dark">

      {{>cellPhoneView}}

    </div><!--CARD BODY-->
    </br>
    <div class="card">
      {{>contactAdditionalInfo}}
    </div><!--CARD-->
    </br>
    {{>newUserView}}
    </br>
    </br>
      <div class="form-row">
        <div class="col">
          <div class="input-group mb-3">
            <button class="btn btn-success btn-block" style="font-size: 25px" type="submit">Crear</button>
          </div>
        </div>
      </div>
    </form>
</div><!--CONTAINER-->
{{>footer}}
