<!--ROW 3-->
<div class="form-row">
  <div class="col">
    <label for="labelName" class="text-light">Imagen QR</label>
    </br>
    <a href="http://bit.ly/CompraConQR" target="_blank" class="text-info">Generar QR en Bancolombia
      <span class="input-group-addon"><i class="fa fa-external-link" aria-hidden="true"></i></span>
    </a>
    <div class="input-group-lg mb-3">
        <input type="file" class="form-control-lg text-white bg-dark" id="imageQR"
          name="imageQR" onchange="updateImage(this, '#imageQRUploaded');" accept="image/">
        </input>
    </div>
    </br>
    {{{getImageQRFromBankAccount bankAccount}}}
    </br>
  </div> <!--col-->
