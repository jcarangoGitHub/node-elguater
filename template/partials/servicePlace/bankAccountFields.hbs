<!--ROW 1-->
<div class="form-row">
  <div class="col">
    <label for="labelName" class="text-light">Nombre de la cuenta bancaria</label>
    <div class="input-group-lg mb-3">
      <input type="text" class="form-control-lg text-white bg-dark" id="accountName"
        name="accountName" placeholder="ejm: Bancolombia - Ahorros" required
        {{#if bankAccount}}value="{{bankAccount.accountName}}" {{/if}}>
    </div><!--input-group-->
  </div>
</div>

<!--ROW 2-->
<div class="form-row">
  <div class="col">
    <label for="labelName" class="text-light">NÃºmero de la cuenta bancaria</label>
