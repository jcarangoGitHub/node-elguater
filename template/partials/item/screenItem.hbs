<div class="card-header bg-secondary h">
  <!--ROW 1-->
  <div class="form-row">
    <div class="col">
      <span class="input-group-addon"><i class="fa fa-cutlery fa-1x fa-fw" style="color:white"></i></span>
      <h class="card-title">Platos</h>
    </div>
  </div>
</div>

<!--Items-->
<form action="/item" method="post" enctype="multipart/form-data">
  <input type="hidden" name="_contactId" id="_contactId" value="{{contact._id}}">
  <input type="hidden" name="_partnerId" id="_partnerId" value="{{contact._partnerId}}">

  <div class="accordion bg-dark h" id="accordionNewItem">
    <div class="card-header" id="headingNewItem">
      <h class="mb-0">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                data-target="#collapseNewItem" aria-expanded="true"
                aria-controls="collapseNewItem" style="font-size: 25px">
          <span class="input-group-addon"><i class="fa fa-file-o fa-1x fa-fw" aria-hidden="true"></i></span>
          &nbsp;Nuevo
        </button>
      </h>
    </div><!--card header-->

    <div class="card text-center text-white bg-dark mb-3">
      <div id="collapseNewItem" class="collapse" aria-labelledby="headingNewItem"
        data-parent="#accordionNewItem">
          <div class="card-body bg-dark">
            {{>itemFields}}
            </br>
            <div class="form-row">
              <div class="col">
                <button class="btn btn-success btn-lg btn-block" type="submit" style="font-size: 25px">
                Crear
                </button>
              </div>
            </div>
          </div><!--card-body-->
      </div> <!--collapseNewItem-->
    </div>
  </div> <!--accordion-->
</form>


{{#if items}}
<div class="card-header bg-secondary h">
  <!--ROW 1-->
  <div class="form-row">
    <div class="col">
      <h class="card-title">Platos registrados</h>
    </div>
  </div>
</div>
<div class="card text-center text-white bg-dark mb-3">
{{>listItems}}
</div>
{{/if}}
